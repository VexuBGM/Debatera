generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  DEBATER
  JUDGE
}

enum RoundStatus {
  PLANNING // draft
  PUBLISHED // pairings out, debate happening or about to happen
  FINAL // results locked
  CANCELLED // round cancelled
}

enum SpeakerRole {
  FIRST_SPEAKER
  SECOND_SPEAKER
  THIRD_SPEAKER
  REPLY_SPEAKER
  JUDGE
}

enum ParticipantStatus {
  ACTIVE // Currently in the debate room
  LEFT // Left the debate room
  RESERVED // Role reserved but not yet joined
}

enum BallotStatus {
  NOT_STARTED // Judge hasn't started filling the ballot
  DRAFT // Judge is actively filling, auto-saving
  SUBMITTED // Judge has submitted the ballot
  CONFIRMED // Admin has reviewed and confirmed
  VOIDED // Admin has marked as invalid/wrong judge
}

model User {
  id        String   @id @db.VarChar(128) // Clerk user id
  email     String?  @unique
  username  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Institution relations
  institutionMemberships InstitutionMember[]
  institutionsCreated    Institution[]       @relation("InstitutionsCreated")

  // Tournament participation
  tournamentParticipations TournamentParticipation[]
  tournamentsFrozen        Tournament[]              @relation("TournamentsFrozen")
}

model Tournament {
  id             String    @id @default(dbgenerated("'tourn_' || gen_random_uuid()::text")) @db.VarChar(128)
  name           String
  description    String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  ownerId        String    @db.VarChar(128)
  rosterFreezeAt DateTime?
  frozenById     String?   @db.VarChar(128)
  frozenBy       User?     @relation("TournamentsFrozen", fields: [frozenById], references: [id], onDelete: SetNull)

  teams                  TournamentTeam[]
  participations         TournamentParticipation[]
  registeredInstitutions TournamentInstitutionRegistration[]
  rounds                 Round[]
}

model Institution {
  id          String   @id @default(dbgenerated("'inst_' || gen_random_uuid()::text")) @db.VarChar(128)
  name        String   @unique
  description String?
  createdById String   @db.VarChar(128)
  createdBy   User     @relation("InstitutionsCreated", fields: [createdById], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members                 InstitutionMember[]
  teams                   TournamentTeam[]
  tournamentRegistrations TournamentInstitutionRegistration[]
  participations          TournamentParticipation[]

  @@index([createdById])
}

model InstitutionMember {
  id            String   @id @default(dbgenerated("'imem_' || gen_random_uuid()::text")) @db.VarChar(128)
  userId        String   @db.VarChar(128)
  institutionId String   @db.VarChar(128)
  isCoach       Boolean  @default(false)
  joinedAt      DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)

  @@unique([userId]) // A user can only be in one institution
  @@index([institutionId])
}

model TournamentTeam {
  id            String   @id @default(dbgenerated("'team_' || gen_random_uuid()::text")) @db.VarChar(128)
  name          String
  tournamentId  String   @db.VarChar(128)
  institutionId String   @db.VarChar(128)
  teamNumber    Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tournament         Tournament                @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  institution        Institution               @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  participations     TournamentParticipation[]
  propTeam           RoundPairing[]            @relation("propTeam")
  oppTeam            RoundPairing[]            @relation("oppTeam")
  debateParticipants DebateParticipant[]
  ballotWins         Ballot[]                  // Ballots where this team won
  resultWins         DebateResult[]            @relation("ResultWinner")
  resultLosses       DebateResult[]            @relation("ResultLoser")

  @@unique([tournamentId, institutionId, teamNumber])
  @@index([tournamentId])
  @@index([institutionId])
}

model TournamentParticipation {
  id            String   @id @default(dbgenerated("'part_' || gen_random_uuid()::text")) @db.VarChar(128)
  userId        String   @db.VarChar(128)
  tournamentId  String   @db.VarChar(128)
  teamId        String?  @db.VarChar(128)
  institutionId String?  @db.VarChar(128)
  role          RoleType
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user             User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  tournament       Tournament          @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  team             TournamentTeam?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  institution      Institution?        @relation(fields: [institutionId], references: [id], onDelete: SetNull)
  judgeAssignments RoundPairingJudge[]

  @@unique([userId, tournamentId]) // Single appearance rule
  @@index([tournamentId])
  @@index([teamId])
  @@index([institutionId])
}

model TournamentInstitutionRegistration {
  id             String   @id @default(dbgenerated("'reg_' || gen_random_uuid()::text")) @db.VarChar(128)
  tournamentId   String   @db.VarChar(128)
  institutionId  String   @db.VarChar(128)
  registeredAt   DateTime @default(now())
  registeredById String   @db.VarChar(128)

  tournament  Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  institution Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)

  @@unique([tournamentId, institutionId])
  @@index([tournamentId])
  @@index([institutionId])
}

model Round {
  id           String      @id @default(dbgenerated("'rnd_' || gen_random_uuid()::text")) @db.VarChar(128)
  tournamentId String      @db.VarChar(128)
  number       Int
  name         String? // e.g., "Preliminary 1", "Quarterfinal", "Finals"
  motion       String? // The debate motion/topic
  infoSlide    String? // Description/context for the motion
  status       RoundStatus @default(PLANNING)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  tournament    Tournament     @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  roundPairings RoundPairing[]

  @@index([tournamentId])
}

model RoundPairing {
  id          String    @id @default(dbgenerated("'rpair_' || gen_random_uuid()::text")) @db.VarChar(128)
  roundId     String    @db.VarChar(128)
  propTeamId  String?   @db.VarChar(128)
  oppTeamId   String?   @db.VarChar(128)
  callId      String?   @db.VarChar(256) // Stream video call ID
  scheduledAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  round        Round               @relation(fields: [roundId], references: [id], onDelete: Cascade)
  propTeam     TournamentTeam?     @relation("propTeam", fields: [propTeamId], references: [id], onDelete: Cascade)
  oppTeam      TournamentTeam?     @relation("oppTeam", fields: [oppTeamId], references: [id], onDelete: Cascade)
  judges       RoundPairingJudge[]
  participants DebateParticipant[]
  ballots      Ballot[]
  result       DebateResult?

  @@index([roundId])
  @@index([propTeamId])
  @@index([oppTeamId])
}

model RoundPairingJudge {
  id              String   @id @default(dbgenerated("'rpj_' || gen_random_uuid()::text")) @db.VarChar(128)
  pairingId       String   @db.VarChar(128)
  participationId String   @db.VarChar(128)
  isChair         Boolean  @default(false)
  createdAt       DateTime @default(now())

  pairing       RoundPairing            @relation(fields: [pairingId], references: [id], onDelete: Cascade)
  participation TournamentParticipation @relation(fields: [participationId], references: [id], onDelete: Cascade)

  @@unique([pairingId, participationId])
  @@index([pairingId])
  @@index([participationId])
}

model DebateParticipant {
  id        String            @id @default(dbgenerated("'dpart_' || gen_random_uuid()::text")) @db.VarChar(128)
  pairingId String            @db.VarChar(128)
  userId    String            @db.VarChar(128)
  teamId    String?           @db.VarChar(128) // null for judges
  role      SpeakerRole
  status    ParticipantStatus @default(RESERVED)
  joinedAt  DateTime          @default(now())
  leftAt    DateTime?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  pairing RoundPairing    @relation(fields: [pairingId], references: [id], onDelete: Cascade)
  team    TournamentTeam? @relation(fields: [teamId], references: [id], onDelete: SetNull)

  // Removed @@unique([pairingId, userId]) to allow users to have both a main role and REPLY_SPEAKER role
  @@unique([pairingId, teamId, role]) // A role can only be taken once per team (null teamId allowed for multiple judges)
  @@index([pairingId])
  @@index([userId])
  @@index([teamId])
}

model Ballot {
  id        String       @id @default(dbgenerated("'ballot_' || gen_random_uuid()::text")) @db.VarChar(128)
  pairingId String       @db.VarChar(128)
  judgeId   String       @db.VarChar(128) // User ID of the judge
  isChair   Boolean      @default(false)
  status    BallotStatus @default(NOT_STARTED)

  // Winner selection
  winnerTeamId String? @db.VarChar(128) // ID of the winning team

  // Team feedback
  propFeedback String? @db.Text // Feedback for Proposition team
  oppFeedback  String? @db.Text // Feedback for Opposition team

  // Optional comments
  generalComments String? @db.Text // General comments about the debate
  privateComments String? @db.Text // Private comments only for tab/admin

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  submittedAt DateTime? // When the judge submitted the ballot
  confirmedAt DateTime? // When admin confirmed the ballot

  pairing       RoundPairing    @relation(fields: [pairingId], references: [id], onDelete: Cascade)
  winnerTeam    TournamentTeam? @relation(fields: [winnerTeamId], references: [id], onDelete: SetNull)
  speakerScores SpeakerScore[]

  @@unique([pairingId, judgeId]) // One ballot per judge per debate
  @@index([pairingId])
  @@index([judgeId])
  @@index([winnerTeamId])
}

model SpeakerScore {
  id       String @id @default(dbgenerated("'score_' || gen_random_uuid()::text")) @db.VarChar(128)
  ballotId String @db.VarChar(128)
  userId   String @db.VarChar(128) // The speaker being scored
  teamId   String @db.VarChar(128) // The team the speaker is on
  role     SpeakerRole // The role they had in the debate

  // Scoring
  totalScore Float? // Total score (e.g., 60-80 in British Parliamentary)

  // Optional: breakdown by criteria (can add later for more sophisticated scoring)
  contentScore  Float? // Score for content/arguments
  styleScore    Float? // Score for style/delivery
  strategyScore Float? // Score for strategy

  // Speaker-specific feedback
  feedback String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ballot Ballot @relation(fields: [ballotId], references: [id], onDelete: Cascade)

  @@unique([ballotId, userId, role]) // One score per speaker per role per ballot
  @@index([ballotId])
  @@index([userId])
  @@index([teamId])
}

model DebateResult {
  id        String  @id @default(dbgenerated("'result_' || gen_random_uuid()::text")) @db.VarChar(128)
  pairingId String  @unique @db.VarChar(128)
  
  // Final result
  winnerTeamId String  @db.VarChar(128)
  loserTeamId  String  @db.VarChar(128)
  
  // Panel information
  panelVotesProp Int @default(0) // Number of judges who voted for Prop
  panelVotesOpp  Int @default(0) // Number of judges who voted for Opp
  
  // Average scores (optional, for speaker tab)
  propAvgScore Float? // Average score for Prop team
  oppAvgScore  Float? // Average score for Opp team
  
  // Status
  isFinal   Boolean @default(false) // Whether this result is locked
  publishedAt DateTime? // When results were published to teams
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pairing    RoundPairing   @relation(fields: [pairingId], references: [id], onDelete: Cascade)
  winnerTeam TournamentTeam @relation("ResultWinner", fields: [winnerTeamId], references: [id], onDelete: Cascade)
  loserTeam  TournamentTeam @relation("ResultLoser", fields: [loserTeamId], references: [id], onDelete: Cascade)

  @@index([pairingId])
  @@index([winnerTeamId])
  @@index([loserTeamId])
}
