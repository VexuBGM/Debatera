generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum AppRole {
  USER
  ADMIN
}

enum DebateStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELED
}

enum CallRole {
  DEBATER
  JUDGE
  SPECTATOR
}

enum DebateSide {
  PROP
  OPP
  NEUTRAL
}

// Core models
model User {
  id                    String               @id @default(uuid()) @db.Uuid
  clerkId               String               @unique @db.VarChar(128)
  username              String               @db.VarChar(64)
  imageUrl              String?
  appRole               AppRole              @default(USER)
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @default(now()) @updatedAt

  // Relations
  createdTournaments    Tournament[]
  teamMemberships       TeamMember[]
  debateParticipations  DebateParticipant[]
  judgeFeedback         JudgeFeedback[]

  @@index([clerkId])
}

model Tournament {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @db.VarChar(120)
  description String?
  isVerified  Boolean  @default(false)
  createdById String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  // Relations
  createdBy User     @relation(fields: [createdById], references: [id])
  teams     Team[]
  debates   Debate[]

  @@index([createdById])
  @@index([isVerified])
}

model Team {
  id           String    @id @default(uuid()) @db.Uuid
  name         String    @db.VarChar(120)
  tournamentId String?   @db.Uuid
  createdAt    DateTime  @default(now())

  // Relations
  tournament       Tournament?  @relation(fields: [tournamentId], references: [id])
  members          TeamMember[]
  propDebates      Debate[]     @relation("PropTeam")
  oppDebates       Debate[]     @relation("OppTeam")

  @@index([tournamentId])
}

model TeamMember {
  teamId   String   @db.Uuid
  userId   String   @db.Uuid
  joinedAt DateTime @default(now())

  // Relations
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([teamId, userId])
  @@index([userId])
}

model Debate {
  id           String        @id @default(uuid()) @db.Uuid
  tournamentId String?       @db.Uuid
  propTeamId   String        @db.Uuid
  oppTeamId    String        @db.Uuid
  scheduledAt  DateTime?
  status       DebateStatus  @default(SCHEDULED)
  winningSide  DebateSide?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt

  // Relations
  tournament   Tournament?          @relation(fields: [tournamentId], references: [id])
  propTeam     Team                 @relation("PropTeam", fields: [propTeamId], references: [id])
  oppTeam      Team                 @relation("OppTeam", fields: [oppTeamId], references: [id])
  participants DebateParticipant[]
  feedback     JudgeFeedback[]

  @@index([tournamentId])
  @@index([propTeamId])
  @@index([oppTeamId])
  @@index([status])
}

model DebateParticipant {
  id         String      @id @default(uuid()) @db.Uuid
  debateId   String      @db.Uuid
  userId     String      @db.Uuid
  role       CallRole
  side       DebateSide  @default(NEUTRAL)
  speakOrder Int?
  createdAt  DateTime    @default(now())

  // Relations
  debate Debate @relation(fields: [debateId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([debateId, userId])
  @@index([debateId, role])
  @@index([userId])
}

model JudgeFeedback {
  id         String      @id @default(uuid()) @db.Uuid
  debateId   String      @db.Uuid
  judgeId    String      @db.Uuid
  notes      String?
  winnerSide DebateSide?
  createdAt  DateTime    @default(now())

  // Relations
  debate Debate @relation(fields: [debateId], references: [id], onDelete: Cascade)
  judge  User   @relation(fields: [judgeId], references: [id], onDelete: Cascade)

  @@unique([debateId, judgeId])
  @@index([debateId])
  @@index([judgeId])
}
