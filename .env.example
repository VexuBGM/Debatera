# Environment Configuration
NODE_ENV=development

# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/debatera?schema=public"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Optional Clerk routing (defaults set in layout.tsx)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Stream Video
# Get these from https://getstream.io/dashboard
NEXT_PUBLIC_STREAM_API_KEY=your_stream_api_key
STREAM_SECRET_KEY=your_stream_secret_key

# Application URLs
# Base URL of your application (no trailing slash)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Security (Optional)
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000

# Error Monitoring (Optional)
# Add Sentry DSN when ready to use error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
